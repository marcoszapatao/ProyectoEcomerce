{{#if user}}
  <h2>Bienvenido/a, {{user.first_name}} {{user.last_name}} {{user.email}} {{user.role}} {{user.cart}}</h2>
{{/if}}
<a href="/session/logout">Cerrar Sesión</a>
<a href="/user/profile">Perfil</a>
<a href="/carts/{{user.cart}}">Ver Carrito Original</a>

<h1>Lista de Productos</h1>

{{#if payload.length}}
  <ul>
      {{#each payload}}
      <li>
          <h2>{{title}}</h2>
          <p>Descripción: {{description}}</p>
          <p>Precio: ${{price}}</p>
          <button onclick="addToCart('{{_id}}')">Agregar al Carrito</button>
          <a href="/products/{{_id}}">Ver Más</a>
      </li>
      {{/each}}
  </ul>

  <!-- Paginación -->
  <div>
      {{#if hasPrevPage}}
          <a href="{{prevLink}}">Página Anterior</a>
      {{/if}}
      <span>Página {{page}} de {{totalPages}}</span>
      {{#if hasNextPage}}
          <a href="{{nextLink}}">Página Siguiente</a>
      {{/if}}
  </div>
{{else}}
  <p>No se encontraron productos.</p>
{{/if}}

<script>

const tokenJWT = localStorage.getItem('tokenJWT');

function addToCart(productId) {
    fetch(`/carts/add-product/${productId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${tokenJWT}`
        }
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('No se pudo añadir el producto al carrito.');
        }
        return response.json();
    })
    .then(() => {
        alert("Producto añadido al carrito correctamente.");
    })
    .catch(error => {
        console.error('Error al añadir el producto al carrito:', error);
    });
}


</script>
